{
  "version": "qllm_v1.5_rag_gemini_selflearn_config",
  "embedding_dim": 512,
  "chunk_size": 2000,
  "chunk_overlap": 100,
  "training_epochs": 20,
  "training_files": [
    "./training_data/ethics_ai.md",
    "./training_data/philosophy_basics.txt",
    "./training_data/frankenstein_tagged.md",
	"./training_data/books_markdown/frankenstein.md",
	"./training_data/books_markdown/platon_dialoge.md",
	"./training_data/books_markdown/zarathustra.md",
	"./training_data/books_markdown_de/platon_dialoge.md",
	"./training_data/books_markdown_de/zarathustra.md",
	"./training_data/learn.txt"  
